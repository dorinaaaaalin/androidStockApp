<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_category"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basicmaterials" />

    <TextView
        android:id="@+id/textView_category_name"
        android:layout_width="283dp"
        android:layout_height="41dp"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:fontFamily="@font/pt_serif_font_family"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="@color/fontColour"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_category_description"
        android:layout_width="284dp"
        android:layout_height="27dp"
        android:layout_alignLeft="@+id/textView_category_name"
        android:layout_alignStart="@+id/textView_category_name"
        android:layout_marginStart="90dp"
        android:layout_marginTop="49dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/fontColour"
        android:fontFamily="@font/sourcesanspro_font_family"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="90dp" />

</android.support.constraint.ConstraintLayout>